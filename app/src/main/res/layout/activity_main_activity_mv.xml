<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.restaurantemv.MainActivityMV"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurante &quot;MV&quot;"
        android:id="@+id/TituloRestaurante"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="23"
        android:rowCount="4">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imgButton1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/bandeja_mariscos"
            android:layout_marginTop="30dp"
            android:onClick="clickuno"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imgButton2"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/Gallina"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="clickdos"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen3"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/camaron"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="clicktres"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imgButton4"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/corviche"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="clickcuatro"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen5"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/pescado_frito"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="clickcinco"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imgButton6"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/salprieta"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="clickseis"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen7"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/arroz_mariscos"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="clicksiete"/>

    </GridLayout>
</LinearLayout>
